{
  "name": "submission-platform",
  "version": "1.0.0",
  "description": "Platform for handling \"submission based\" events.",
  "main": "index.ts",
  "scripts": {
    "build": "npx tsc",
    "start": "node dist/index.ts",
    "dev": "nodemon config/express/index.ts",
    "test": "dotenv -e .env.test jest",
    "check": "prettier --check '**/*.{css,scss,html,js,ts,tsx}'",
    "format": "prettier --write '**/*.{css,scss,html,js,ts,tsx}'",
    "drizzle-kit": "drizzle-kit",
    "db:create:dev": "dotenv -e .env.dev drizzle-kit push",
    "db:create:test": "dotenv -e .env.test drizzle-kit push"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "better-sqlite3": "^10.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.30.10",
    "express": "^4.19.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.10",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.12",
    "drizzle-kit": "^0.21.2",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
